{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    // "strict": true, // typography.js がまだ TypeScript 化していないのでお許しください
    "removeComments": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src/**/*"
  ]
}
